@model CardFile.Web.Models.AuthorViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-lg-5">
    <h2 class="mt-3">Profile</h2>

    <div class="bg-white border border-1 rounded-3 col-4">

        <div class="justify-content-center">
            <span class="fs-3 col-3">@Html.DisplayNameFor(model => model.FirstName):</span>
            <span class="fs-4 fw-lighter col-3">@Html.DisplayFor(model => model.FirstName)</span>
        </div>

        <div class="justify-content-center">
            <span class="fs-3 col-3">@Html.DisplayNameFor(model => model.SecondName):</span>
            <span class="fs-4 fw-lighter col-3">@Html.DisplayFor(model => model.SecondName)</span>
        </div>
    </div>

    <div class="form-group d-flex mt-5">
        <div class="">
            <a href="/Cards/Index" class="btn btn-lg btn-outline-dark">Back to Cards</a>
        </div>
        <div class=" ml-5">
            <a href="/Author/Edit/@Model.Id" class="btn btn-lg btn-outline-primary px-4">Edit Profile</a>
        </div>
        <div class="ml-3">
            <a href="/Cards/Create" class="btn btn-lg btn-outline-success px-4">Create Card</a>
        </div>
    </div>

    <div class="container mb-2">
        <h3 align="center">Author`s cards:</h3>
        <hr />
        @MyHelpers.PrintCards(Model.Cards)
    </div>
</div>
