@model CardFile.Web.Models.AuthorViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-lg-5">
    <h2 class="mt-3">Profile</h2>

    <div class="dl-horizontal pl-3 border border-1 rounded-3">

        <div class="justify-content-center">
            <span class="fs-3 col-3">@Html.DisplayNameFor(model => model.FirstName):</span>
            <span class="fs-4 fw-lighter col-3">@Html.DisplayFor(model => model.FirstName)</span>
        </div>

        <div class="justify-content-center">
            <span class="fs-3 col-3">@Html.DisplayNameFor(model => model.SecondName):</span>
            <span class="fs-4 fw-lighter col-3">@Html.DisplayFor(model => model.SecondName)</span>
        </div>
    </div>

    <div class="form-group row mt-5">
        <div class="col-1">
            <a href="/Cards/Index" class="btn btn-outline-dark">Back to Cards</a>
        </div>
        <div class="col-1 ml-5">
            <a href="/Author/Edit/@Model.Id" class="btn btn-outline-dark px-4">Edit Profile</a>
        </div>
        <div class="col-1 ml-5">
            <a href="/Cards/Create/@Model.Id" class="btn btn-outline-dark px-4">Create Card</a>
        </div>
    </div>
</div>
