@model CardFile.Web.Models.IndexViewModel<CardFile.Web.Models.CardViewModel>

@using CardFile.Web.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="ml-4 row justify-content-center">
        <div class="mt-3 col">
            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-1">@Html.DropDownList("sortFilter", new SelectList(new string[] { "Date", "Title", "Like" }), "Sort by")</div>
                    <div class="col row row-cols-3">
                        <div class="col-2 pl-5">Find by title:</div>
                        @Html.TextBox("SearchString", "", new { @class = "col-3" })
                        <input type="submit" value="Search" class="col-1 ml-3" />
                    </div>
                </div>
            }
        </div>
        <div class="mt-3 col-3">
            <a href="/Cards/Create" class="btn btn-outline-dark">Create new Card</a>
        </div>
    </div>

    <hr class="mt-5"/>

    <div class="mt-5">
        @MyHelpers.PrintCards(Model.PageObjects)
    </div>

    <div class="container-fluid mt-5">
        <div class="btn-group  m-auto">
            @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
        </div>
    </div>
</div>
